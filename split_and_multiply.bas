Function РазделитьИУмножить(ячейка As Range) As Double  
    Dim текст As String  
    Dim части() As String  
    Dim результат As Double  
    Dim j As Integer  
    
    ' Читаем текст из ячейки  
    текст = ячейка.Value  
    
    ' Разделяем строку по "x"  
    части = Split(текст, "x")  
    
    ' Проверяем, есть ли элементы  
    If UBound(части) >= 0 Then  
        ' Начинаем с 1 (инициализация результата первым числом)  
        результат = 1  
        
        ' Перебираем все части  
        For j = LBound(части) To UBound(части)  
            ' Преобразуем в число, заменяя запятую на точку  
            результат = результат * CDbl(Replace(части(j), " ", ""))  
        Next j  
    End If  
    
    ' Возвращаем результат  
    РазделитьИУмножить = результат  
End Function
